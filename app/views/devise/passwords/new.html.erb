<div class="full-screen-background">
	<div class="container">
		<h2 class="form-header form-header-white font-white">Forgot Your Password?</h2>
		<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, :class => 'form-horizontal sign-up-form'}, wrapper: :horizontal_form) do |f| %>
		  <%= f.error_notification %>
		  <h2></h2>
		  <%= f.input :email, autofocus: true, class: "form-control" %>
		  <div class="form-group">
	        <div class="col-sm-offset-2 col-sm-10">
	          <%= f.submit "Resend Confirmation Instructions", class: 'btn btn-primary' %> <br />
	          <div class="container devise-links">
	            <%= render "devise/shared/links" %>
	          </div>
	        </div>
	      </div>
		<% end %>
	</div>
</div>