<div class="container">
  <h2><span>Edit Profile</span></h2>
  <div class="sign-up-form">

	<%= simple_form_for @profile do |f| %>
  	  <div class="form-inline">
	    <div class = "required col-xs-12">
		  <% if @profile.errors.any? %>
		    <div id="error_explanation">
		      <h2><%= pluralize(@profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

		      <ul>
		      <% @profile.errors.full_messages.each do |msg| %>
		        <li><%= msg %></li>
		      <% end %>
		      </ul>
		    </div>
		  <% end %>

	      <h2>Required</h2>
	      <% if current_user.has_role? :mentor %>
	      	<%= render :partial => 'devise/shared/categories', :locals => {:f => f} %>
	      <% end %>

	      <div class = "col-xs-12">
		  <%= f.label :story, 'Your Story' %><br />
		  <%= f.text_area :story, class: 'form-control' %>
		  
		  <% if current_user.has_role? :mentor %>
		  	<p> Your story will be shared with those who may choose you as their mentor </p>
		  <% else %>
		  	<p> Your story will only be shared with the mentor you choose. <br />
		  		 </p>
		  <% end %>
		  </div>

		  
		  <div class = "col-xs-12">
		  <% if current_user.has_role? :mentor %>
		  	<%= f.label :max_clients, 'Maximum Number of Clients' %><br />
		  	<%= f.number_field :max_clients, in: 1..10, class: 'form-control' %>
		  	<p> Please only choose the number of clients you can devote full attention to at any time. </p>
		  <% end %>

		  <%= f.input :profile_country, label: "Country", collection: CountryStateSelect.countries_collection %>
		  <%= f.input :profile_state, CountryStateSelect.state_options(label: "State / Province", form: f, field_names: { :country => :profile_country, :state => :home_state } ) %>
		  </div>

		  

		</div>
		<div class="required">
			<h2>Optional</h2>
			<div class="col-xs-12">
		    <%= f.fields_for :address do |j| %>
		    	<%= render :partial => 'devise/shared/address', :locals => {:f => j} %>
		    <% end %>
		    </div>
		    <div class="col-xs-12">
		    <%= f.label :birthday, 'Birth Date' %><br />
		    <%= f.date_select :birthday, :start_year => 1900, :end_year => Date.current.year, :prompt => { :day => 'Select day', :month => 'Select month', :year => 'Select year' }, class: 'form-control' %> <br />
		    
		    <%= f.label :gender, 'I Am' %><br />
		    <%= f.select :gender, ["Male", "Female"], :prompt => "Gender", class: 'form-control' %>
		    </div>

		</div>
	       <%= f.submit "Update", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>