<header>
    <nav class="navbar navbar-inverse navbar-fixed-top my-navbar" role="navigation">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse"> 
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <%= link_to image_tag("BrokenBranchLogo.png", alt: "The Brokenness Club Logo", height: '50px', width: '50px'), root_path, { id: "logo" } %>
                <%= link_to "The Brokenness Club", root_path, { class: "navbar-brand", id: "brand" } %>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="navbar-collapse collapse" >
                <ul class="nav navbar-nav navbar-right" id="nav-list">
                    <% if user_signed_in? %>
                      <li class="dropdown" id="dropdown-box">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                          <span class="caret"></span>
                          <%= current_user.first_name %>
                          <span class="glyphicon glyphicon-user"></span>
                        </a>
                        <ul class="dropdown-menu" role="menu">
                          <li><%= link_to 'Users', users_path %></li>
                          <li><%= link_to 'Profile', profile_path(current_user) %></li>
                          <li><%= link_to 'Edit Account', edit_user_registration_path %></li>
                          <li><%= link_to 'Log out', destroy_user_session_path, method: :delete %></li>

                        </ul>
                      </li>
                    <% else %>
                      <li><%= link_to 'Log In', new_user_session_path %></li>
                      <li><%= link_to 'Sign Up', new_user_registration_path %></li>
                    <% end %>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container -->
    </nav>
</header>