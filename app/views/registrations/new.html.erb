<div class="full-screen-background">
  <div class="container">
  <h2 class="form-header form-header-white font-white">Sign Up</h2>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { :class => 'form-horizontal sign-up-form'}, wrapper: :horizontal_form) do |f| %>
        <%= f.error_notification %>
        <h2></h2>
        <%= f.input :first_name, autofocus: true, class: 'form-control' %>
        <%= f.input :last_name, autofocus: true, class: 'form-control' %>
        <%= f.input :email, class: 'form-control'%>
        <%= f.input :password, autocomplete: "off", class: 'form-control', hint: "(6 characters minimum)"  %>
        <%= f.input :password_confirmation, autocomplete: "off", class: 'form-control' %>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <%= f.submit "Sign up", class: 'btn btn-primary' %> <br />
            <div class="container devise-links">
              <%= render "devise/shared/links" %>
            </div>
          </div>
        </div>
      <% end %>
  </div>
</div>