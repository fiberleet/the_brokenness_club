<div class="full-screen-background">
  <div class="container">
    <h2 class="form-header form-header-white font-white">Edit Account</h2>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), method: :put, html: { :class => 'form-horizontal sign-up-form'}, wrapper: :horizontal_form) do |f| %>
        <%= f.error_notification %>
        
        <h2> </h2>

        <%= f.input :first_name, autofocus: true, class: 'form-control' %>
        
        <%= f.input :last_name, class: 'form-control' %>

        <%= f.input :email, class: 'form-control' %>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <%= f.input :password, autocomplete: "off", class: 'form-control' %>

        <%= f.input :password_confirmation, autocomplete: "off", class: 'form-control' %>

        <%= f.input :current_password, autocomplete: "off", class: 'form-control', hint: "(we need your current password to confirm your changes)" %>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <%= f.submit "Update", class: "btn btn-primary" %>
          </div>
        </div>
        <div class="form-group cancel-account">
          <div class="col-sm-2">
            <h4>Cancel my account</h4>
          </div>
          <div class="col-sm-10">
            <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-primary" %>
          </div>
        </div>
      <% end %>
  </div>
</div>