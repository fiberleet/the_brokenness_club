@import "bootstrap-sprockets";
@import "bootstrap";

/* Navbar */
body {
    background-color: #edefed;
    margin-top: 50px;
}

.navbar.navbar-fixed-top{
	background-color: rgba(0,0,0, 0.5);
	border-bottom-width: 1px;
	border-color: white;
	color: white;
	height: 50px;
	margin-bottom: 0;
	.navbar-brand{
		font-family: 'Archivo Narrow', sans-serif;
		font-weight: bold;
		color: white;
		float: right;
		margin-left: 0px;
		padding: 15px 0px;
	}
	.navbar-brand:hover{
		color: #685195;
	}
}

@media screen and (max-width: 768px) {
	.navbar-collapse{
		background-color: black;
	}
}
#nav-list{
	margin: 0px;
	a{
		color: white;

	}
	a:hover{
		color: #685195;
	}
}

#logo{
	float: left;
	width: 55px;
	padding-right: 5px;
}

.dropdown-menu{
	background-color: black;
	border: none;
}

/* Home Page */
p{
	font-family: 'Slabo 27px', serif;
	font-size: 20px;
	text-align: left;
}
.top-half-page{
	background: url('<%= asset_path("4238051-background.jpg") %> ');
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
        -webkit-background-size: cover;
        -moz-background-size: cover;
        -o-background-size: cover;
        height: 600px;
    margin-top: -50px;
    padding-top: 150px;
    border-bottom-width: 3px;
    border-bottom-color: #685195;
    border-bottom-style: solid;
}

.jumbotron {
	background: rgba(0, 0, 0, 0);
	color: white;
	h1 {
		font-size: 50px;
		font-weight: bold;
		color: white;
		text-transform: uppercase;
	}
	h2{
		line-height: 1.5em;
		margin-bottom: 30px;
		font-weight: bold;
		font-size: 20px;
		border: none;
	}
	.btn{
		background-color: rgba(0,0,0,.5);
		border-color: white;
		border-width: 5px;
		color: white;
		font-size: 30px;
		box-shadow: 10px 5px 5px black;
		border-radius: 0px;
		min-width: 175px;
	}
	.btn:hover{
		background-color: rgba(0,0,0,.5);
		border-color: #685195;
		color: white;
	}
	.panel-group{
		max-width: 1000px;
		margin: auto;
	}
	#buttons-panel{
		margin-top: 0;
		box-shadow: none;
	}

}

@media screen and (min-width: 768px) {
    .jumbotron{
    	margin-bottom: 150px;
    }
    .bottom-half-home-page .bottom-panels{
    	min-height: 270px;
    }
}

.center {
	text-align: center;
}



.panel{
	background-color: transparent;
	border-width: 0;
	text-align: center;
	color: black;
}
h2{
	padding-top: 20px;
	font-weight: bold;
	width: 100%; 
	text-align: center; 
	border-bottom: 1px solid #000; 
	line-height: 0.1em;
	margin: 10px 0 20px;
}
h2 span { 
    background:#edefed; 
    padding:0 10px; 
}
h5{
	margin: auto;
	width: 50%;
	padding: 20px;
	line-height: 1.2em;
}
@media screen and (max-width: 768px) {
	h5{
		margin: auto;
		width: 80%;
		padding: 20px;
	}
}
/* Mission */
.btn{
	background-color: transparent;
	border-radius: 0px;
	border-width: 5px;
	border-color: black;
	color: black;
}
.btn:hover{
	background-color: transparent;
	border-color: #685195;
	color: black;
}
.btn:focus{
	background-color: transparent;
	color: black;
	border-color: black;
}
.btn:focus:hover{
	background-color: transparent;
	border-color: #685195;
	color: black;
}

#section-1{
	padding: 20px;
	max-width: 1170px;
	background-color: white;
	text-align: center;
	height: auto;
	#shuttle{
		height: 300px;
		float: left;
		overflow: hidden;
		background-image: url('<%= asset_path("compass.jpg") %>');
		background-position: center;
		background-size: cover;
	}
	p{
		padding: 20px 20px;
		text-align: left;
		font-size: 18px;
	}
	h1{
		font-weight: bold;
		font-size: 30px;
	}
}

@media screen and (max-width: 768px) {
	#section-1{
		#shuttle{
			display: none;
		}
		display: block;
		margin-top: 20px;
		height: 340px;
		overflow: hidden;
		background-image: url('<%= asset_path("compass.jpg") %>');
		background-position: center;
		background-size: cover;
		color: white;
		background-color: white;
		padding: 20px 0px;
		p{
			padding: 20px 20px;
		}
		.btn{
			color: white;
			border-color: white;
		}
		.btn:hover{
			border-color: #685195;
		}
	}
}

/* Reach Out */
#get-help{
	padding: 0px;
	padding-top: 20px;
	text-align: center;
	p{
		width: 75%;
		margin: auto;
		color: white;
		font-size: 20px;
		padding: 30px;
	}
	.btn{
		border-color: white;
		color: white;
	}
	.btn:hover{
		border-color: #685195;
	}
}
#umbrella{
	height: 600px;
	width: 60%;
	margin: auto;
	background-image: url('<%= asset_path("umbrella-170962_1920.jpg") %>');
	background-position: center;
	background-size: cover;
}

@media screen and (max-width: 768px) {
	#umbrella{
	 	width: 100%;
	 	p{
	 		width: 90%;
	 	}
	}
}

#give-help{
	padding-top: 20px;
	text-align: center;
	h2{
		font-weight: bold;
	}
}

#worried-girl{
	background-image: url('<%= asset_path("worried-girl-darker.jpg") %>');
	background-position: center;
	background-size: cover;
	height: 500px;
	margin: 0;
}
#share-your-story-container{
	max-width: 600px;
	position: relative;
	top: 50%;
	-webkit-transform: translateY(-50%);
    -ms-transform: translateY(-50%);
    transform: translateY(-50%);
}
#share-your-story-text{
	text-align: center;
	padding: 30px;

	max-width: 300px;
	float: right;
	color: white;
	p{
		padding-bottom: 30px;
	}
	.btn{
		color: white;
		border-color: white;
	}
	.btn:hover{
		border-color: #685195;
	}
}

@media screen and (max-width: 768px) {
	 #share-your-story-text{
	 	padding:30px 0;
		p{
			font-size: 20px;
		}
	}
}
/* Panel Group */
@media screen and (max-width: 768px) {
    .bottom-half-home-page .bottom-panels{
    	min-height: 200px;
    }
}

.bottom-half-about-page{
	background-color: white;
	padding: 0;
	max-width: 1200px;

	.panel-body{
		text-align: left;
	}
	.panel.panel-default.col-sm-6{
		margin-top: 0;
	}

	.panel.panel-default.col-sm-3{
		margin-top: 0;
	}

	.bottom-panels.panel{
		padding: 0;
		padding-bottom: 0px;
		background-color: transparent;
		border-radius: 0;
		border-color: black;
		height: 260px;
	}
	.bottom-panels .panel-heading{
		border-radius: 0;
		background-color: transparent;
		font-size: 30px;
	}
}
/* Footer */

footer.footer{
	font-size: 10px;
	background-color: white;
	padding-top: 50px;
}

/* Debug */
.debug_dump{
	float: left;
}

/* About */
.header-container{
	background-color: #2f2f2f;
}
#about-header{
	h1{
		margin: 0px;
		padding: 20px 0px;
		color: white;
	}
}
#about-body{
	background-image: url('<%= asset_path("walk.jpg") %>');
	background-position: center;
	background-size: cover;
	height: 600px;

}
#about-body-text{
	color: white;
	font-weight: bold;
	position: relative;
  	top: 50%;
  	transform: translateY(-50%);
  	-ms-transform: translateY(-50%);
  	-webkit-transform: translateY(-50%);
}

/* Get Help */

.instructions-container{
	padding-bottom: 30px;
	h5{
		margin: 10px 0px;
		width: auto;
		padding: 0px;
		padding-top: 15px;
		line-height: 1.2em;
		color: grey;
	}
	h1{
		padding-top: 10px;
	}
	.motivation{
		padding: 20px 0px;
	}
	p{
		font-family: inherit;
		font-size: inherit;
	}
	h4{
		padding-bottom: 20px;
	}
}

/* Forms */
.sign-up-form{
	max-width: 700px;
	margin: auto;
	h2{
		border: none;
		font-size: 20px;
	}
	#error_explanation{
		background-color: $alert-danger-bg;
		color: $alert-danger-text;
		padding: $alert-padding;
		border-radius: $alert-border-radius;

	}
	.btn{
		margin-bottom: 10px;
	}
}

.alert-alert {
  @extend .alert-warning;
}

.alert-notice {
  @extend .alert-info;
  margin-bottom: 0;
  position: absolute;
  width: inherit;
}

