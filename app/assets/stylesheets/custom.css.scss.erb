@import "bootstrap-sprockets";
@import "bootstrap";

/* Navbar */
body {
    background-color: #edefed;
}

.navbar.navbar-fixed-top{
	background-color: rgba(0,0,0, 0.5);
	border-bottom-width: 1px;
	border-color: white;
	color: white;
	.logo{
		padding: 0px 15px;
		float: left;
	}
	.navbar-brand{
		color: white;
		padding-right: 0;
	}
	.navbar-brand:hover{
		color: #007ee5;
	}
}
#log-in-button{
	color: white;
	float: right;
}
#log-in-button:hover{
	color: #007ee5;
}

/* Home Page */
.top-half-page{
	background: url('<%= asset_path("4238051-background.jpg") %> ');
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
        -webkit-background-size: cover;
        -moz-background-size: cover;
        -o-background-size: cover;
        height:100%;
    margin-top: -100px;
    padding-top: 200px;
}

.jumbotron {
	background: rgba(0, 0, 0, 0);
	color: white;
	h1 {
		font-size: 50px;
		font-weight: bold;
		color: white;
		text-transform: uppercase;
	}
	p{
		margin-bottom: 30px;
		font-weight: bold;
	}
	.btn{
		background-color: rgba(0,0,0,.5);
		border-color: white;
		border-width: 5px;
		color: white;
		font-size: 30px;
		box-shadow: 10px 5px 5px black;
		border-radius: 0px;
		min-width: 175px;
	}
	.btn:hover{
		background-color: rgba(0,0,0,.5);
		border-color: #007ee5;
		color: #007ee5;
	}
	#buttons-panel{
		margin-top: 0;
		box-shadow: none;
	}

}

@media screen and (min-width: 768px) {
    .jumbotron{
    	margin-bottom: 150px;
    }
    .bottom-half-home-page .bottom-panels{
    	min-height: 270px;
    }
}

.center {
	text-align: center;
}



.panel{
	background-color: rgba(0,0,0,0);
	border-width: 0;
	text-align: center;
	color: black;
}

/* Mission */
.btn{
	background-color: rgba(0,0,0,0);
	border-radius: 0px;
	border-width: 5px;
	border-color: black;
	color: black;
}
.btn:hover{
	background-color: rgba(0,0,0,0);
	border-color: #007ee5;
	color: #007ee5;
}

#section-1{
	padding: 20px;
	max-width: 1170px;
	background-color: white;
	text-align: center;
	#shuttle{
		float: left;
		height: 300px;
		overflow: hidden;
		background-image: url('<%= asset_path("space-shuttle_800x400.jpg") %>');
		background-position: center;
		background-size: cover;
	}
	p{
		padding: 20px 20px;
		text-align: left;
		font-size: 18px;
	}
	h1{
		font-weight: bold;
		font-size: 30px;
	}
}

@media screen and (max-width: 768px) {
	#section-1{
		#shuttle{
			display: none;
		}
		margin-top: 20px;
		float: left;
		height: 300px;
		overflow: hidden;
		background-image: url('<%= asset_path("space-shuttle_800x400.jpg") %>');
		background-position: center;
		background-size: cover;
		color: white;
		background-color: white;
		padding: 20px 0px;
		p{
			padding: 20px 20px;

		}
		.btn{
			background-color: rgba(0,0,0,0.5);
			color: white;
			border-color: white;
		}
		.btn:hover{
			background-color: rgba(0,0,0,0.5);
			border-color: #007ee5;
			color: #007ee5;
		}
	}
}

